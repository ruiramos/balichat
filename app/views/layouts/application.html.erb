<!DOCTYPE html>
<html>
<head>
  <title>amizade</title>
  <%= stylesheet_link_tag "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>

<body>
  <div class="container-fluid">
    <div id="header" class="row-fluid">
    
    <div class="span2"><h1><a class="brand" href="#">Balichat</a></h1></div>

    <ul class="span8 nav nav-pills rooms">
      <li class="active"><a href="#">Demo room</a> <a href="#"><i class="icon-remove icon-white"></i></a></li>
      <!--<li><a href="#">outro</a><i class="icon-remove icon-white"></i></li>
      <li><a href="#">caralho</a><i class="icon-remove icon-white"></i></li>-->
    </ul>
     
    <div class="span2 settings-panel">  
        <% if user_signed_in? %>
          <div class="btn-group">
          <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
            <%= current_user %>
            <span class="caret"></span>
          </a>
          <ul class="dropdown-menu">
            <!-- dropdown menu links -->
            <li><a href="#settings" role="button" class="" data-toggle="modal">Settings</a></li>
            <li><%= link_to "Log out", destroy_user_session_path, method: :delete, class: "" %></li>
          </ul>
        </div>
        <% else %>
          <%= link_to "Log in", new_user_session_path, class: "navbar-link" %>
        <% end %>

    </div> 
  </div>

  <div class="row-fluid content-row">
    <%= yield %>
  </div>

  <div id="settings" class="modal hide fade">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      <h3>Settings</h3>
    </div>
    <div class="modal-body">
      <p>One fine bodyâ€¦</p>
    </div>
    <div class="modal-footer">
      <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
      <button class="btn btn-primary">Save changes</button>
    </div>
  </div>

</div>
</body>
</html>
