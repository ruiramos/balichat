<div class="row-fluid">
  <div class="span2">
    menu esquerda
  </div>

  <div class="span8">
    <div class="row-fuid page-header">
      <h1>Sala de chat</h1>
    </div>

    <div class="chat-window"></div>
    
    <div class="chat-input form-inline">
      <table width="100%" cellspacing="0">
        <tbody>
          <tr>
            <td><%= text_area :input, '', class: 'chat-input-field', rows: 2 %></td>
            <td><%= link_to_function 'Send', 'return false', class: 'btn btn-info btn-send' %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="span2">
    menu direita
  </div>
</div>

<script type="text/javascript">
  var jabber = null;

  $(document).ready(function () {
    jabber = new Jabber();
    jabber.connect('<%= @jid %>', '<%= @sid %>', '<%= @rid %>');
  });
</script>